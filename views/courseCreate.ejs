<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('_links') %>
    <title>SPM - New Course</title>
</head>
<body>
<%- include('_navbarLogged') %>
<div class="container pt-5" style="max-width: 500px;">
    <% if(message.error){ %>
        <div class="alert alert-danger" role="alert">
        <% message.error.forEach(error => { %>
            <%- error %>
        <% }); %>
        </div>
    <% } else if(message.success){ %>
        <div class="alert alert-success" role="alert">
        <% message.success.forEach(success => { %>
            <%- success %>
        <% }); %>
        </div>
    <% } %>
    <h1>New course</h1>
    <form action="" method="POST">
        <div class="form-group">
            <label for="name">Username</label>
            <input type="text" id="name" name="name" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" id="description" name="description" class="form-control">
        </div>
        <div class="form-group">
            <label for="totalTheories">Total theories</label>
            <input type="text" id="totalTheories" name="totalTheories" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="totalRides">Total rides</label>
            <input type="text" id="totalRides" name="totalRides" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="price">Price</label>
            <input type="text" id="price" name="price" class="form-control" required>
        </div>
        <input type="submit" class="btn btn-primary float-right" value="Create">
    </form>
</div>
</body>
</html>