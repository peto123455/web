<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="/css/cards.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('_links') %>
    <title>SPM</title>
</head>
<body>
<%- include('_navbarLogged') %>
<div class="container text-center pt-5">
	<div class="jumbotron">
			<h1>Available courses</h1>
	</div>
	<div class="d-flex justify-content-start flex-wrap align-self-stretch">
		<!-- List all courses -->
		<% courses.forEach( (course) => { %>
		<div class="card course-card col-12 col-lg-3 mx-auto m-lg-0" style="width: 18rem;">
			<div class="card-body d-flex flex-column">
				<h5 class="card-title font-weight-bold"><%= course.name %></h5>
				<p class="card-text">
					<span><%= course.price %> â‚¬</span>
				</p>
				<a href="/courses/detail?id=<%= course._id %>" class="btn btn-primary mt-auto">View details</a>
			</div>
		</div>
		<% }); %>
		<!-- Adding new courses -->
		<% if(user.role == 3) { %>
		<div class="card course-card col-12 col-lg-3 mx-auto m-lg-0" style="width: 18rem;">
			<div class="card-body d-flex align-items-center mx-auto">
				<a href="/courses/create"><i class="fa fa-plus-circle align-middle" style="font-size: 60px;" aria-hidden="true"></i></a>
			</div>
		</div>
		<% } %>
	</div>
</div>
</body>
</html>